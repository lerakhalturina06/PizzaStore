{
    "name": "your-github-username/pizza-store-lib",
    "description": "A core library for pizza store management",
    "type": "library",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PizzaStoreLib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PizzaStoreLib\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": [
            "vendor/bin/phpstan analyse src --memory-limit=512M",
            "vendor/bin/phpcs --standard=PSR12 src/"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}