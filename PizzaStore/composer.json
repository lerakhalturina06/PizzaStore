{
    "name": "lulldev/pizza-store",
    "description": "Pizza Store library for pizza ordering system",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PizzaStore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PizzaStore\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "check-code": [
            "@phpcs",
            "@phpstan"
        ],
        "phpcs": "vendor/bin/phpcs --standard=PSR12 src/",
        "phpcbf": "vendor/bin/phpcbf --standard=PSR12 src/",
        "phpstan": "vendor/bin/phpstan analyse src/ --level=8",
        "test": "php tests/test.php"
    }
}